<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <form action="/add-product" method="POST" class="main-form">
            <label for="titleProd">Product title</label>
            <input type="text" id="titleProd" name="titleProduct">
            <label for="priceProd">Product price</label>
            <input type="number" id="priceProd" name="priceProduct" step="0.01">
            <label for="imageProd">Product image url</label>
            <input type="text" name="imageProduct" id="imageProd">
            <label for="descProd">Product description</label>
            <textarea name="descProduct" id="descProd" cols="15" rows="5"></textarea>
            <button type="submit" class="submit submit-product">Add Product</button>
        </form>
    <body>
</html>